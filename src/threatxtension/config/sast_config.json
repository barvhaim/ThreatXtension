{
  "description": "SAST analyzer configuration for filtering third-party libraries and known code",
  "exclusion_patterns": {
    "path_segments": [
      "lib/",
      "libs/",
      "vendor/",
      "vendors/",
      "third_party/",
      "node_modules/",
      "external/",
      "dependencies/",
      "bundle/",
      "dist/",
      "build/",
      "static/",
      "assets/",
      "public/"
    ],
    "file_patterns": [
      "*.min.js",
      "*.bundle.js",
      "*.compiled.js",
      "*.pack.js",
      "*.chunk.js",
      "*.module.js",
      "*.min.*.js",
      "chunk-*.js",
      "vendors~*.js",
      "*.generated.js",
      "*.config.js"
    ],
    "library_names": [
      "jquery",
      "bootstrap",
      "lodash",
      "underscore",
      "moment",
      "angular",
      "react",
      "vue",
      "d3",
      "chart",
      "highcharts",
      "backbone",
      "knockout",
      "prototype",
      "mootools",
      "dojo",
      "yui",
      "extjs",
      "json2.js",
      "json3.js",
      "polyfill",
      "promise.js",
      "modernizr",
      "require.js",
      "babel",
      "webpack",
      "rollup",
      "webextension-polyfill",
      "typescript",
      "esbuild",
      "parcel",
      "vite"
    ]
  },
  "max_file_size_kb": 500,
  "enabled": true,
  "semgrep_config": "custom",
  "semgrep_config_options": {
    "custom": "config/custom_semgrep_rules.yaml",
    "javascript": "p/javascript",
    "security-audit": "p/security-audit",
    "owasp-top-ten": "p/owasp-top-ten",
    "auto": "auto"
  },
  "scanning": {
    "batch_enabled": true,
    "batch_timeout_per_file_seconds": 10,
    "parallel_enabled": true,
    "max_parallel_workers": 4
  }
}
